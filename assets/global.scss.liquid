/* ---------------------------------------------------------------------
 Variables - Site
------------------------------------------------------------------------ */
$SITE_MAX_WIDTH: 1386px;
$SITE_STD_UNIT: 20px;
$SITE_LINE_HEIGHT: 1.4;

/* ---------------------------------------------------------------------
 Variables - Breakpoints
------------------------------------------------------------------------ */
$BREAKPOINT_XS: 30em; // 480px
$BREAKPOINT_SM: 37em; // 592px
$BREAKPOINT_XM: 44em; // 704px
$BREAKPOINT_MD: 50em; // 800px
$BREAKPOINT_MX: 56em; // 896px
$BREAKPOINT_LG: 60em; // 960px
$BREAKPOINT_XL: 65em; // 1040px
$BREAKPOINT_XXL: 75em; // 1200px
$BREAKPOINT_XXXL: 82em; // 1312px

/* ---------------------------------------------------------------------
 Mixin - Visually Hidden
------------------------------------------------------------------------ */
@mixin is-visually-hidden() {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}

/* ---------------------------------------------------------------------
 Mixin - Clearfix
------------------------------------------------------------------------ */
@mixin clearfix() {
    &:before,
    &:after {
        content: " ";
        display: table;
    }

    &:after {
        clear: both;
    }
}

/* ---------------------------------------------------------------------
 Mixin - Box Sizing
------------------------------------------------------------------------ */
@mixin box-sizing($BOX_MODEL) {
    -webkit-box-sizing: $BOX_MODEL;
       -moz-box-sizing: $BOX_MODEL;
            box-sizing: $BOX_MODEL;
}

/* ---------------------------------------------------------------------
 Mixin - Border Radius
------------------------------------------------------------------------ */
@mixin border-radius($RADIUS...) {
    -webkit-background-clip: padding-box;
       -moz-background-clip: padding-box;
         -o-background-clip: padding-box;
            background-clip: padding-box; // stops color from going past the edge of the rounded element
    -webkit-border-radius: $RADIUS;
       -moz-border-radius: $RADIUS;
            border-radius: $RADIUS;
}

/* ---------------------------------------------------------------------
 Reset - Eric Meyer
------------------------------------------------------------------------ */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-weight: inherit;
    font-style: inherit;
    font-family: inherit;
    vertical-align: baseline;
}

body {
    line-height: 1;
}

ol, ul {
    list-style: none;
}

blockquote, q {
    quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
    content: '';
    content: none;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}

/* ---------------------------------------------------------------------
 Reset - HTML5 Elements
------------------------------------------------------------------------ */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, main {
    display: block;
}

audio, canvas, video, progress, picture {
    display: inline-block;
}

template {
    display: none;
}

/* ---------------------------------------------------------------------
 Reset - Forms
------------------------------------------------------------------------ */
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
    -webkit-appearance: none;
}

input[type="search"] {
    -webkit-appearance: none;
    -webkit-box-sizing: content-box;
    -moz-box-sizing: content-box;
    box-sizing: content-box;
}

textarea {
    overflow: auto;
    vertical-align: top;
    resize: vertical;
}

::-moz-focus-inner,
button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner,
input[type="reset"]::-moz-focus-inner {
    padding: 0 !important;
    border: 0 none !important;
}

input[type='number'] {
    -moz-appearance:textfield;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
}

/* ---------------------------------------------------------------------
 Reset - Shopify
------------------------------------------------------------------------ */
#admin_bar_iframe {
    display: none !important; // hide the shopify admin bar always
}

/* ---------------------------------------------------------------------
 Base - Elements
------------------------------------------------------------------------ */
body {
    background-color: $ACCENT_1; // this is the color of the footer only
    color: $TEXT_COLOR;
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_LG;
    line-height: $SITE_LINE_HEIGHT;
}

a {
    color: $LINK_COLOR;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

a:hover,
a:focus {
    color: $LINK_COLOR;
}

/* ---------------------------------------------------------------------
 Base - Responsive Media
------------------------------------------------------------------------ */
img, audio, canvas, video, picture {
    max-width: 100% !important; // media should never overflow it's container
}

/* ---------------------------------------------------------------------
 Utility - Content Hiding
------------------------------------------------------------------------ */
.isHidden {
    display: none;
}

.isVisuallyHidden {
    @include is-visually-hidden();
}

.isHiddenOnSmallScreens {
    @media (max-width: $BREAKPOINT_XS) {
        display: none;
    }
}

.isHiddenOnMediumScreens {
    @media (max-width: $BREAKPOINT_MD) {
        display: none;
    }
}

/* ---------------------------------------------------------------------
 Landmark - Toolbar
------------------------------------------------------------------------ */
.toolbar {
    padding: 14px 0 12px 0;
    text-align: right;
    font-family: $SANS_SERIF_BOLD;
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: $WHITE;
    @media (min-width: $BREAKPOINT_MD) {
        font-size: $FONT_SIZE_MD;
    }
}

.toolbar a {
    color: $WHITE;
    text-decoration: none;
}

.toolbar_fancy,
.toolbar_fancy a {
    color: $TEXT_COLOR;
}

.toolbar-hamburger {
    float: left;
    @media (min-width: $BREAKPOINT_XS) {
        display: none;
    }
}

.toolbar-promo {
    display: none;
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        padding-right: $SITE_STD_UNIT;
    }
}

.toolbar-util {
    display: inline-block;
}

.toolbar-util-list > li {
    display: inline-block;
}

.toolbar-util-list > li + li {
    padding-left: $SITE_STD_UNIT;
}

.toolbar-util-list > li.toolbar-util-list-account {
    display: none;
    @media (min-width: $BREAKPOINT_XS) {
        display: inline-block;
    }
}

/* ---------------------------------------------------------------------
 Landmark - Masthead
------------------------------------------------------------------------ */
.masthead {
    @include clearfix();
    padding: $SITE_STD_UNIT 0;
}


.masthead-brand {
    @media (min-width: $BREAKPOINT_XS) {
        float: left;
        width: calc(40% - #{$SITE_STD_UNIT});
        padding-right: $SITE_STD_UNIT;
    }
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
    }
}

.masthead-nav {
    display: none;
    @media (min-width: $BREAKPOINT_XS) {
        display: block;
        float: left;
        width: 60%;
    }
    @media (min-width: $BREAKPOINT_XM) {
        float: none;
        width: 100%;
    }
}

/* ---------------------------------------------------------------------
 Masthead Module - Logo
------------------------------------------------------------------------ */
.logo {
    width: 120px; // width set for inline svg
    margin: 0 auto; // center on small screens
    @media (min-width: $BREAKPOINT_XM) {
        margin: 0;
    }

}

/* ---------------------------------------------------------------------
 Masthead Module - Nav
------------------------------------------------------------------------ */
.nav-list {
    margin-top: $SITE_STD_UNIT*0.5;
    font-size: 0;
    font-family: $SANS_SERIF_BOLD;
    @media(min-width: $BREAKPOINT_XM) {
        text-align: right;
    }
}

.nav-list > * {
    display: inline-block;
    @include box-sizing(border-box);
    width: 50%;
    padding-left: $SITE_STD_UNIT;
    @media(min-width: $BREAKPOINT_XM) {
        width: auto;
    }
    @media(min-width: $BREAKPOINT_MD) {
        padding-left: $SITE_STD_UNIT*1.5;
    }
}

.nav-list a {
    font-size: $FONT_SIZE_XL;
    text-transform: uppercase;
    @media (min-width: $BREAKPOINT_MD) {
        font-size: $FONT_SIZE_LG;
    }
}

.nav-list_light a {
    color: $WHITE;
}

/* ---------------------------------------------------------------------
 Masthead Module - MobileNav
------------------------------------------------------------------------ */
.mobileNav {
    height: 0;
    overflow: hidden;
    background-color: darken($ACCENT_2, 5%);
    color: $WHITE;
    @media(min-width: $BREAKPOINT_XS) {
        height: 0 !important;
    }
}

.mobileNav-isVisible {
    height: auto;
}

.mobileNav-list > li a {
    display: block;
    padding: #{$SITE_STD_UNIT*0.35} $SITE_STD_UNIT;
    border-top: 1px solid $ACCENT_2;
    color: $WHITE;
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
}

.mobileNav-list > li a:hover,
.mobileNav-list > li a:focus {
    background-color: darken($ACCENT_2, 8%);
}

// fancy style!
.mobileNav_fancy {
    background-color: darken($WHITE, 5%);
    color: $TEXT_COLOR;
}

.mobileNav-list_fancy > li a {
    border-top: 1px solid lighten($TEXT_COLOR, 50%);
    color: $TEXT_COLOR;
}

.mobileNav-list_fancy > li a:hover,
.mobileNav-list_fancy > li a:focus {
    background-color: darken($WHITE, 8%);
}


/* ---------------------------------------------------------------------
 Landmark - Footer
------------------------------------------------------------------------ */
.footer {
    padding: $SITE_STD_UNIT*1.5 0;
    color: $WHITE;
    font-family: $SERIF;
    font-size: $FONT_SIZE_LG;
    @media (min-width: $BREAKPOINT_MD) {
        padding-top: $SITE_STD_UNIT*2;
        padding-bottom: $SITE_STD_UNIT*2;
    }
}

.footer a {
    color: $WHITE;
}

/* ---------------------------------------------------------------------
 Footer Module - footerGrid
------------------------------------------------------------------------ */
$footer-BORDER: 1px solid $WHITE;

.footerGrid {
    @include clearfix();
}

.footerGrid-col_cta {
    padding-bottom: $SITE_STD_UNIT*1.75; // slight larger than the rest because there isn't line-height causing extra space here.
    margin-bottom: $SITE_STD_UNIT*1.5;
    border-bottom: $footer-BORDER;
    @media (min-width: $BREAKPOINT_MD) {
        padding-bottom: 0;
        margin-bottom: 0;
        border-bottom: none;
        float: left;
        width: calc(100% - 420px); // 420 - 240 + 180 (column sizes)
        position: relative;
        left: 240px; // move into 2nd position
    }
    @media (min-width: $BREAKPOINT_XL) {
        padding-top: 14px; // faux vertical alignment. YAY
    }
}

.footerGrid-col_info {
    padding-bottom: $SITE_STD_UNIT*1.5; // slight larger than the rest because there isn't line-height causing extra space here.
    margin-bottom: $SITE_STD_UNIT*1.5;
    border-bottom: $footer-BORDER;
    text-align: center;
    @media (min-width: $BREAKPOINT_SM) {
        font-size: 0; // remove space between inline-block elements
    }
    @media (min-width: $BREAKPOINT_MD) {
        padding-bottom: 0;
        margin-bottom: 0;
        border-bottom: none;
        float: left;
        width: 240px;
        position: relative;
        left: calc(-100% + 420px); // move into 1st col position
    }
    @media (min-width: $BREAKPOINT_XL) {
        text-align: left;
    }
}

.footerGrid-col_info-address {
    margin-bottom: $SITE_STD_UNIT;
    @media (min-width: $BREAKPOINT_SM) {
        margin-bottom: 0;
        display: inline-block;
        width: 50%;
        vertical-align: middle;
        font-size: $FONT_SIZE_LG; // return font-size
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: block;
        margin-bottom: $SITE_STD_UNIT;
        width: auto;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_info-hours {
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        width: 50%;
        vertical-align: middle;
        font-size: $FONT_SIZE_LG; // return font-size
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: block;
        width: auto;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_nav {
    text-align: center;
    @media (min-width: $BREAKPOINT_MD) {
        float: left;
        width: 180px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        text-align: left;
        width: 160px;
        padding-left: 20px
    }
}

.footerGrid-col_nav-list > li {
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: list-item;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_nav-list > li + li:before {
    @media (min-width: $BREAKPOINT_SM) {
        content: "\00a0\00a0\007C\00a0\00a0\00a0";
    }
    @media (min-width: $BREAKPOINT_MD) {
        content: "";
    }
}

/* ---------------------------------------------------------------------
 Footer Grid Outer Module - footerGridOuter
------------------------------------------------------------------------ */
.footerGridOuter {
    @media (min-width: $BREAKPOINT_MD) {
        position: relative;
        margin-left: -20px; // undo wrapper padding
        margin-right: -20px; // undo wrapper padding
    }
    @media (min-width: $BREAKPOINT_MX) {
        margin-left: 0;
        margin-right: 0;
    }
}

.footerGridOuter:before {
    // horizontal divider
    @media (min-width: $BREAKPOINT_MD) {
        content: " ";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 240px;
        width: 1px;
        background-color: $WHITE;
    }
    @media (min-width: $BREAKPOINT_MX) {
        left: 260px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        left: 240px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        left: 260px;
    }
    @media (min-width: $BREAKPOINT_XXL) {
        left: 280px;
    }
    @media (min-width: $BREAKPOINT_XXXL) {
        left: 300px;
    }
}

.footerGridOuter:after {
    // horizontal divider
    @media (min-width: $BREAKPOINT_MD) {
        content: " ";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        right: 180px;
        width: 1px;
        background-color: $WHITE;
    }
    @media (min-width: $BREAKPOINT_MX) {
        right: 200px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        right: 180px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        right: 200px;
    }
    @media (min-width: $BREAKPOINT_XXL) {
        right: 220px;
    }
    @media (min-width: $BREAKPOINT_XXXL) {
        right: 240px;
    }
}

/* ---------------------------------------------------------------------
 Footer Module - signupForm
------------------------------------------------------------------------ */
.signupForm {
    position: relative;
    max-width: 320px;
    margin: 0 auto;
    @media (min-width: $BREAKPOINT_SM) {
        max-width: 420px;
    }
    @media (min-width: $BREAKPOINT_MD) {
        max-width: 280px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        max-width: 380px;
    }
}

.signupForm-btn {
    position: absolute;
    top: 0;
    right: 0;
}

/* ---------------------------------------------------------------------
 Footer Module - newsletterLabel
------------------------------------------------------------------------ */
.newsletterLabel {
    display: none;
    @media (min-width: $BREAKPOINT_SM) {
        display: inline;
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: none;
    }
    @media (min-width: $BREAKPOINT_LG) {
        display: inline;
    }
}

/* ---------------------------------------------------------------------
 Footer Module - FooterSection
------------------------------------------------------------------------ */
.footerSection {
    text-align: center;
}

.footerSection-hd {
    margin-bottom: $SITE_STD_UNIT;
}

.footerSection-bd {
    margin-bottom: $SITE_STD_UNIT;
}

.footerSection-ft {
    font-size: $FONT_SIZE_MD;
    @media (min-width: $BREAKPOINT_LG) {
        font-size: $FONT_SIZE_LG;
    }
}

/* ---------------------------------------------------------------------
 Module - Tier
------------------------------------------------------------------------ */
.tier {
    @include clearfix(); // always clear a tier in case other generated content has floats
    background-color: $WHITE;
}

.tier_accent1 {
    background-color: $ACCENT_1;
}

.tier_accent2 {
    background-color: $ACCENT_2;
}

.tier_transparent {
    background-color: transparent;
}

// for the home page hero image
.tier_hero {
    background-repeat: no-repeat;
    background-size: cover;
    @media(min-width: $BREAKPOINT_XM) {
        height: 400px
    }
    @media(min-width: $BREAKPOINT_MD) {
        height: 500px
    }
    @media(min-width: $BREAKPOINT_LG) {
        height: 600px;
    }
}

/* ---------------------------------------------------------------------
 Module - Wrapper
------------------------------------------------------------------------ */
.wrapper {
    max-width: $SITE_MAX_WIDTH;
    margin: 0 auto;
    padding: 0 $SITE_STD_UNIT;
    @media (min-width: $BREAKPOINT_XL) {
        padding: 0 $SITE_STD_UNIT*2;
    }
}

.wrapper_constrained {
    max-width: 400px;
    @media (min-width: $BREAKPOINT_SM) {
        max-width: 500px;
    }
    @media (min-width: $BREAKPOINT_MD) {
        max-width: $SITE_MAX_WIDTH;
    }
}

/* ---------------------------------------------------------------------
 Module - Label
------------------------------------------------------------------------ */
.label {
    display: block;
    margin-bottom: $SITE_STD_UNIT*.1;
}

/* ---------------------------------------------------------------------
 Module - Field
------------------------------------------------------------------------ */
$field-btn-PADDING_TIGHT: 7px 10px;
$field-btn-FONT_SIZE_SM: $FONT_SIZE_MD;

.field {
    margin: 0;
    padding: 0;
    border: 0;
    @include box-sizing(border-box);
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_MD;
    line-height: normal;
}

.field_txt {
    width: 100%;
    padding: $field-btn-PADDING_TIGHT;
    border: 1px solid $ACCENT_1;
    background-color: $WHITE;
    font-family: $SERIF;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    @include border-radius(0);
}

.field_txt_sm {
    width: 36px;
}

.field_txt_overlap {
    padding-right: 74px;
    border: none;
    font-size: $field-btn-FONT_SIZE_SM;
}

.field_dropdown {
    display: inline-block;
    border: 1px solid $TEXT_COLOR;
    padding: 6px 24px 5px 12px;
    margin-bottom: $SITE_STD_UNIT;
    min-width: 120px;
    max-width: 100%;
    @include border-radius(0px);
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-color: $WHITE;
    background-image: url("select-arrow.svg");
    background-repeat: no-repeat;
    background-position: calc(100% - 7px) center;
    background-size: 12px;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    @media (min-width: $BREAKPOINT_LG) {
        padding: 6px 30px 5px 24px;
        font-size: $FONT_SIZE_LG;
    }
}

/* ---------------------------------------------------------------------
 Module - Button
------------------------------------------------------------------------ */
.btn {
    display: inline-block;
    border: 1px solid $TEXT_COLOR;
    padding: 6px 12px;
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_MD;
    text-transform: uppercase;
    letter-spacing: 1px;
    background-color: $WHITE;
    cursor: pointer;
    @include border-radius(0px);
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    @media (min-width: $BREAKPOINT_LG) {
        padding: 6px 30px;
        font-size: $FONT_SIZE_LG;
    }
}

.btn_soft {
    border-color: $ACCENT_1;
}

/* ---------------------------------------------------------------------
 Module - Overlay Button
------------------------------------------------------------------------ */
.overlayBtn {
    margin: 0;
    padding: $field-btn-PADDING_TIGHT;
    border: none;
    border-left: 1px solid $ACCENT_1;
    background-color: transparent;
    color: $ACCENT_1;
    font-size: $field-btn-FONT_SIZE_SM;
    font-family: $SERIF;
    line-height: normal;
    cursor: pointer;
}

/* ---------------------------------------------------------------------
 Module - Form
------------------------------------------------------------------------ */
.form_isHidden {
    display: none; // hidden for load because it's toggled with JS
}

.form-alert .errors {
    color: $STATUS_ERROR;
    margin-bottom: $SITE_STD_UNIT;
}

.form-alert .success {
    color: $STATUS_SUCCESS;
    margin-bottom: $SITE_STD_UNIT;
}

.form-bd {
    margin-bottom: $SITE_STD_UNIT*1.5;
}

.form-action {
    margin-bottom: $SITE_STD_UNIT;
    border-bottom: 1px solid $ACCENT_1;
    padding-bottom: $SITE_STD_UNIT;
    text-align: right;
}

.form-action:last-child {
    margin-bottom: 0;
    border-bottom: 0;
    padding-bottom: 0;
}

.form-ft {
    text-align: center;
}

/* ---------------------------------------------------------------------
 Module - Vertical List
------------------------------------------------------------------------ */
.vlist > * {
    margin-bottom: $SITE_STD_UNIT;
}

/* ---------------------------------------------------------------------
 Module - Blocks
------------------------------------------------------------------------ */
$blocks-SPACING: $SITE_STD_UNIT*2;
$blocks-MIN_BLOCKS: 2;
$blocks-MAX_BLOCKS: 4;

.blocks {
    margin: #{-$blocks-SPACING} 0 0 #{-$blocks-SPACING}; // fix padding offset created by first row and first item in each row
    font-size: 0; // remove the extra space between inline-block elements.
}

.blocks > * {
    @include box-sizing(border-box);
    display: inline-block;
    vertical-align: top;
    padding: $blocks-SPACING 0 0 $blocks-SPACING; // space items and rows
    font-size: $FONT_SIZE_LG; // reset the font-size after removing it to fix inline-block
}

.blocks_std > * {
    width: 100%;
    @media (min-width: $BREAKPOINT_SM) {
        width: 50%;
    }
    @media (min-width: $BREAKPOINT_LG) {
        width: 25%;
    }
}

.blocks_wide > * {
    width: 100%;
    @media (min-width: $BREAKPOINT_MD) {
        width: 50%;
    }
}

.blocks_products {
    margin: 0 0 0 -10px; // fix padding offset created by first item in each row
}

.blocks_products > * {
    width: 25%;
    padding: 10px 0 0 10px;
}

/* ---------------------------------------------------------------------
 Module - SectionTitle
------------------------------------------------------------------------ */
.sectionTitle {
    position: relative;
    display: inline-block;
    border: 1px solid;
    padding: 6px 30px;
    font-family: $SANS_SERIF_BOLD;
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
    letter-spacing: 1px;
    @media (min-width: $BREAKPOINT_LG) {
        font-size: $FONT_SIZE_XL;
    }
}

.sectionTitle:after {
    content: " ";
    position: absolute;
    bottom: -9px;
    left: calc(50% - 15px);
    width: 26px;
    height: 16px;
    background: $WHITE url("arrow-down.svg") center center no-repeat;
    background-size: 20px
}

/* ---------------------------------------------------------------------
 Module - Page
------------------------------------------------------------------------ */
.pageWrapper {
    border-top: 1px solid $TEXT_COLOR;
    padding: #{$SITE_STD_UNIT*2} 0;
}

.pageWrapper_fancy {
    border-top: none;
    @media (min-width: $BREAKPOINT_MD) {
        position: relative;
        top: -#{$SITE_STD_UNIT*3.5};
        padding: $SITE_STD_UNIT 0 0 0;
        background-color: $WHITE;
    }
    @media (min-width: $BREAKPOINT_LG) {
        padding-top: $SITE_STD_UNIT*1.5;
        top: -#{$SITE_STD_UNIT*5};
    }
}

.pageWrapper-section {
    margin-bottom: $SITE_STD_UNIT*2;
}

.pageWrapper-section_isTight {
    margin-bottom: 0;
}

.pageWrapper-section_isLoose {
    margin-bottom: $SITE_STD_UNIT*3;
    @media (min-width: $BREAKPOINT_MD) {
        margin-bottom: $SITE_STD_UNIT*4;
    }
}

.pageWrapper-section_isCentered {
    text-align: center;
}

/* ---------------------------------------------------------------------
 Module - Panel
------------------------------------------------------------------------ */
.panel {
    text-align: center;
}

/* ---------------------------------------------------------------------
 Module - Hdg
------------------------------------------------------------------------ */
.hdg {
    text-transform: uppercase;
}

.hdg_xxl {
    font-size: $FONT_SIZE_XXL;
}

.hdg_xl {
    font-size: $FONT_SIZE_XL;
}

.hdg_lg {
    font-size: $FONT_SIZE_LG;
}

.hdg_md {
    font-size: $FONT_SIZE_MD;
}

.hdg_sm {
    font-size: $FONT_SIZE_SM;
}

/* ---------------------------------------------------------------------
 Module - Split
------------------------------------------------------------------------ */
.split {
    @include clearfix()
}

.split-left,
.split-right {
    width: 50%;
}

.split-left {
    float: left;
    text-align: left;
}


.split-right {
    float: right;
    text-align: right;
}

/* ---------------------------------------------------------------------
 Module - Product
------------------------------------------------------------------------ */
.product {
    @include clearfix();
}

.product-media img {
    display: block;
}

.product-media {
    margin-bottom: $SITE_STD_UNIT;
    @media (min-width: $BREAKPOINT_XM) {
        float: left;
        width: 40%;
        margin-bottom: 0; // reset small screen
        padding-right: $SITE_STD_UNIT*2;
        @include box-sizing(border-box);
    }
    @media (min-width: $BREAKPOINT_LG) {
        width: 50%;
    }
}

.product-media-list img {
    cursor: pointer;
}

.product-content {
    @media (min-width: $BREAKPOINT_XM) {
        float: left;
        width: 60%;
    }
    @media (min-width: $BREAKPOINT_LG) {
        width: 50%;
    }
}

.product-content-subhd {
    margin-bottom: $SITE_STD_UNIT*.5;
    text-transform: uppercase;
}

.product-content-fields {
    margin-top: $SITE_STD_UNIT*2; // switch to top for purposeful margin collapsing as this butts up against userContent
}

/* ---------------------------------------------------------------------
 Module - Article
------------------------------------------------------------------------ */
.article-hd {
    margin-bottom: $SITE_STD_UNIT*.5;
}

.article-meta {
    margin-bottom: $SITE_STD_UNIT*.5;
}

/* ---------------------------------------------------------------------
 Module - CTA
------------------------------------------------------------------------ */
.cta {
    max-width: 480px;
    margin: 0 auto;
    padding: $SITE_STD_UNIT;
    background-color: $LIGHT;
}

/* ---------------------------------------------------------------------
 Module - ItemTable
------------------------------------------------------------------------ */
.itemTable {
    width: 100%;
    margin-bottom: $SITE_STD_UNIT;
}

.itemTable-cell {
    vertical-align: middle;
    text-align: left;
    border-bottom: 1px solid $LIGHT;
    padding: 20px 8px;
}

.itemTable-cell_media {
    // width is the remainder
    @media (min-width: $BREAKPOINT_XS) {
        width: 80px;
    }
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
    }
    @media (min-width: $BREAKPOINT_MD) {
        width: 200px;
    }
}

.itemTable-cell-media {
    // constrain thumbnail size
    max-width: 80px;
    @media (min-width: $BREAKPOINT_XM) {
        max-width: 100%;
    }
}

.itemTable-cell_media img {
    display: block;

}

.itemTable-cell_details {
    @media (min-width: $BREAKPOINT_XS) {
        padding-left: 28px;
        padding-right: 28px;
        // width is the remainder
    }
}

.itemTable-cell_details > * {
    @media (max-width: $BREAKPOINT_XS) {
        display: none; // hide details on smaller devices
    }
}

.itemTable-cell_qty {
    text-align: center;
    width: 40px;
    @media (min-width: $BREAKPOINT_MD) {
        width: 80px;
    }
}

.itemTable-cell_total,
.itemTable-cell_subtotal {
    width: 60px;
    text-align: left;
}

.itemTable-cell_subtotal {
    border-bottom: 0;
}

.itemTable-cell_label {
    text-align: right;
    border-bottom: 0;
}

/* ---------------------------------------------------------------------
 Module - Action Bar
------------------------------------------------------------------------ */
.actionBar {
    text-align: center;
    @media (min-width: $BREAKPOINT_SM) {
        text-align: right;
    }
}

/* ---------------------------------------------------------------------
 Module - User Content
------------------------------------------------------------------------ */
.userContent {
    color: $TEXT_COLOR;
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_LG;
    line-height: $SITE_LINE_HEIGHT;
    font-weight: normal;
    font-style: normal;

    /* paragraphs */
    p {
        margin: 0 0 $SITE_STD_UNIT 0;
    }

    /* headings */
    h1 {
        font-size: $FONT_SIZE_XXL;
        line-height: 1;
        font-weight: normal;
        color: $TEXT_COLOR;
        margin: 0 0 $SITE_STD_UNIT 0;
    }

    h2 {
        font-size: $FONT_SIZE_XL;
        line-height: 1;
        font-weight: normal;
        color: $TEXT_COLOR;
        margin: 0 0 $SITE_STD_UNIT 0;    }

    h3,
    h4,
    h5,
    h6 {
        font-size: $FONT_SIZE_LG;
        line-height: 1;
        font-weight: normal;
        color: $TEXT_COLOR;
        margin: 0 0 $SITE_STD_UNIT 0;
    }

    /* sections  */
    blockquote {
        margin: 0 #{$SITE_STD_UNIT*2} $SITE_STD_UNIT #{$SITE_STD_UNIT*2};
        padding: $SITE_STD_UNIT #{$SITE_STD_UNIT*1.5};
        background: $LIGHT;
        font-style: normal;
        font-family: $SERIF;
    }

    blockquote > *:last-child {
        margin-bottom: 0;
    }

    blockquote cite {
        font-style: normal;
    }

    address {
        margin: 0 0 $SITE_STD_UNIT 0;
        font-style: normal;
    }

    /* anchors */
    a {
        color: $LINK_COLOR;
        text-decoration: none;
        -webkit-tap-highlight-color: rgba(0,0,0,0);
    }

    a:focus,
    a:hover {
        color: $LINK_COLOR;
    }

    /* text formatting */
    strong,
    b {
        font-weight: bold;
    }

    em,
    i {
        font-style: italic;
    }

    del,
    strike,
    s {
        text-decoration: line-through;
    }

    u,
    ins {
        text-decoration: underline;
    }

    sup {
        vertical-align: super;
        font-size: smaller;
    }

    sub {
        vertical-align: sub;
        font-size: smaller;
    }

    big {
        font-size: larger;
    }

    small {
        font-size: smaller;
    }

    abbr,
    acronym {
        border-bottom: dotted 1px;
    }

    cite,
    dfn {
        font-style: italic;
    }

    q {
        font-style: italic;
    }

    q::before {
        content: open-quote;
    }

    q::after  {
        content: close-quote;
    }

    q:lang(en) {
        quotes: "\201C" "\201D" "\2018" "\2019";
    }

    bdo {
        direction: rtl;
    }

    blink {
        text-decoration: blink;
    }

    /* computer output */
    pre {
        margin: 0 0 $SITE_STD_UNIT 0;
        font-family: $CONSOLE;
        font-size: $FONT_SIZE_SM;
        white-space: pre-wrap;
        word-break: break-word;
    }

    code,
    samp,
    tt,
    kbd {
        font-family: $CONSOLE;
        font-size: $FONT_SIZE_SM;
    }

    var {
        font-family: $CONSOLE;
        font-size: $FONT_SIZE_SM;
        font-style: italic;
    }

    /* lists */
    ul,
    ol,
    dl {
        margin-top: 0;
        margin-bottom: $SITE_STD_UNIT;
    }

    ul {
        list-style-type: disc;
        margin: 0 0 $SITE_STD_UNIT 0;
    }

    ol {
        list-style-type: decimal;
        margin: 0 0 $SITE_STD_UNIT 0;
    }

    dt {
        font-weight: bold;
    }

    li,
    dd {
        margin: 0 0 0 #{$SITE_STD_UNIT*1.5};
    }

    /* nested lists have no top/bottom margins */
    ul ul,
    ul ol,
    ul dl,
    ol ul,
    ol ol,
    ol dl,
    dl ul,
    dl ol,
    dl dl {
        margin-top: 0;
        margin-bottom: 0;
    }

    /* 2 deep unordered lists use a circle */
    ol ul,
    ul ul {
        list-style-type: circle;
    }

    /* 3 deep (or more) unordered lists use a square */
    ol ol ul,
    ol ul ul,
    ul ol ul,
    ul ul ul {
        list-style-type: square;
    }

    /* tables */
    table {
        margin: 0 0 #{$SITE_STD_UNIT*1.5} 0;
        width: 100% !important;
        border-spacing: 1px;
        border-collapse: separate;
    }

    colgroup {

    }

    col {

    }

    caption {
        font-size: smaller;
    }

    tr {
        vertical-align: middle;
    }

    tbody {
        vertical-align: middle;
    }

    thead {
        vertical-align: middle;
    }

    tfoot {
        vertical-align: middle;
    }

    td {
        vertical-align: inherit;
        text-align: inherit;
        padding: 6px 10px;
    }

    th {
        vertical-align: inherit;
        text-align: inherit;
        font-weight: bold;
        padding: 6px 10px;
        background-color: $ACCENT_1;
        color: $WHITE;
    }

    tr:nth-child(even) td {
        background-color: $LIGHT;
    }

    /* horizontal rule */
    hr {
        margin: 0 0 $SITE_STD_UNIT 0;
        background: $ACCENT_1;
        color: $ACCENT_1;
        height: 1px;
        border: none;
        line-height: 1px;
        font-size: 1px;
    }

    /* media */
    img,
    video,
    audio {
        max-width: 100% !important;
    }
}
