/* ---------------------------------------------------------------------
 Override Checkout Styles
------------------------------------------------------------------------ */

/* ---------------------------------------------------------------------
 Reset
------------------------------------------------------------------------ */
body,
#container,
#header,
#main,
#overview,
#content,
#footer,
#container.slim,
#container.slim #header,
#container.slim #main,
#container.slim #overview,
#container.slim #content,
#container.slim #footer,
.group,
#products,
#wallet {
    float: none;
    margin: 0;
    padding: 0;
    border: 0;
    width: auto;
    background: none;
    font-size: {{ settings.font_size_md }};
    font-family: Helvetica, Arial, sans-serif;
    font-weight: inherit;
    font-style: inherit;
    font-family: inherit;
    line-height: 1.4;
    vertical-align: baseline;
    text-shadow: none;
}

*, input, :before, :after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

/* ---------------------------------------------------------------------
 General
------------------------------------------------------------------------ */
body {
    border-top: 48px solid {{ settings.accent_color_2 }};
    background-color: #ffffff;
}

/* ---------------------------------------------------------------------
 Typography
------------------------------------------------------------------------ */
input,
textarea,
button,
select {
   font-size: {{ settings.font_size_md }};
   font-family: Helvetica, Arial, sans-serif;
   color: {{ settings.text_color }};
   -webkit-text-size-adjust: 100%;
}

label {
    font-weight: normal;
    font-size: {{ settings.font_size_sm }};
}

h1, h2, h3, h4, h5, h6 {
    font-family: Helvetica, Arial, sans-serif;
    font-weight: normal;
    margin: 0 0 10px 0;
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
    font-weight: inherit;
}

a {
    color: {{ settings.text_color }};
}

a:hover {
    color: {{ settings.link_color }};
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

/* ---------------------------------------------------------------------
 Container
------------------------------------------------------------------------ */
#container,
#container.slim {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
}

@media (min-width: 65em) {
    #container,
    #container.slim {
        padding: 0 40px;
    }
}

/* ---------------------------------------------------------------------
 Masthead
------------------------------------------------------------------------ */
#header,
#container.slim #header {
    margin: 20px 0;
    padding-bottom: 20px;
    border-bottom: 1px solid {{ settings.text_color }};
}

h1#tagline {
    display: none;
}

#logo {
    margin: 0 auto;
    width: 120px;
    height: 121px;
    background-repeat: no-repeat;
    background-size: 100%;
    background-image: url({{ 'logo-dark.svg' | asset_url }});
}

@media (min-width: 40em) {
    #logo {
        margin: 0;
    }
}

/* ---------------------------------------------------------------------
 Hidden Stuff
------------------------------------------------------------------------ */
#footer,
#container.slim #footer,
#info-bar {
    display: none;
}

/* ---------------------------------------------------------------------
 Boxes
------------------------------------------------------------------------ */
#email,
#addresses,
#buttons,
#overview,
.group {
    padding: 20px;
    margin: 0 0 20px 0;
    background-color: rgba(0,0,0,0.06);
    border-radius: 0;
}

/* ---------------------------------------------------------------------
 Overview Area
------------------------------------------------------------------------ */
#overview br {
    display: none !important;
}

#overview #wallet {
    background: none !important;
}

#overview #wallet #cost {
    font-weight: bold;
    font-size: 26px;
    line-height: 1.4;
    text-shadow: none;
    border-bottom: 1px solid #d6d6d6;
}

#overview #wallet #steps {
    margin: 0;
    padding: 0 0 8px 0;
    display: block;
    font-size: {{ settings.font_size_lg }};
    border-bottom: 1px solid #d6d6d6;
}

/* "You're purchasing this.." text */
#overview #products > h2 {
    display: none;
}

/* ---------------------------------------------------------------------
 Product Table
------------------------------------------------------------------------ */
#thumbs {
    width: 100%;
    padding: 0;
    margin: 0;
    border-collapse: collapse;
    border-spacing: 0;
    border-color: transparent;
}

#thumbs td {
    height: auto;
    padding: 4px;
    border: none;
    font-size: {{ settings.font_size_lg }};
    line-height: 1.4;
    text-align: left;
    vertical-align: top;
}

#thumbs div {

}

#thumbs img {

}

/* Product title color */
#thumbs h3 {
    color: {{ settings.text_color }};
}

/* Product variant and price color */
#thumbs span {
    color: {{ settings.text_color }};
}

/* ---------------------------------------------------------------------
 Form Fields
------------------------------------------------------------------------ */
#container button,
#container input[type="text"],
#container input[type="search"],
#container input[type="password"],
#container input[type="email"],
#container input[type="file"],
#container input[type="number"],
#container input[type="tel"],
#container input[type="submit"],
#container textarea {
    -webkit-appearance: none;
       -moz-appearance: none;
            appearance: none;
}

#container input,
#container select,
#container textarea {
    margin: 0;
    padding: 0;
    border: 0;
    border-radius: 0;
    font-family: Helvetica, Arial, sans-serif;
    font-size: {{ settings.font_size_md }};
    line-height: normal;
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
}

#container input[type="text"],
#container input[type="search"],
#container input[type="password"],
#container input[type="email"],
#container input[type="number"],
#container input[type="tel"],
#container textarea {
    display: inline-block;
    width: 100%;
    padding: 7px 10px;
    border: 1px solid {{ settings.accent_color_1 }};
    background-color: #ffffff;
    font-family: Helvetica, Arial, sans-serif;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0;
}

#container textarea {
    min-height: 100px;
}

#container button,
#container input[type="submit"] {
    cursor: pointer;
}

#container input[type="text"][disabled],
#container input[type="search"][disabled],
#container input[type="password"][disabled],
#container input[type="email"][disabled],
#container input[type="file"][disabled],
#container input[type="number"][disabled],
#container input[type="tel"][disabled],
#container textarea[disabled],
#container select[disabled] {
    cursor: default;
    background-color: #f6f6f6;
}

#container input[type="checkbox"],
#container input[type="radio"] {
    display: inline;
    margin: 0;
}

#container select {
    display: inline-block;
    border: 1px solid {{ settings.accent_color_1 }};
    padding: 6px 30px 5px 14px;
    margin-bottom: 20px;
    width: 100%;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-color: #ffffff;
    background-image: url("select-arrow.svg");
    background-repeat: no-repeat;
    background-position: calc(100% - 7px) center;
    background-size: 12px;
    cursor: pointer;
}

/* ---------------------------------------------------------------------
 Address Groups
------------------------------------------------------------------------ */
#addresses .gleft,
#addresses .gright {
    float: none;
    width: 100%;
    padding: 0;
    margin: 0;
}

/* ---------------------------------------------------------------------
 Artifacts - TODO - What are these? How do I see them and test them?
------------------------------------------------------------------------ */
#overview .hint {
    margin: 0 0 3px 0;
    display: block;
    font-size: {{ settings.font_size_md }};
}









/*================ #Checkout Form ================*/
.form { width: 100%; }
.form label { font-weight: normal; }

.form td { padding: 10px 0; }
.form td + td { padding: 5px 0; }

.form td.lbl,
.form .inline label {
  text-align: right;
  padding-right: 8px;
}

.form td.lbl { width: 165px; }
.form .inline label {
  float: left;
  width: 130px;
}

.form ul.inline li {
  float: none!important;
  width: 100% !important;
  margin: 0 !important;
  overflow: hidden;
  height: 1%;
  padding: 0 0 10px;
}

#billing_address_province_li {
  padding-bottom: 0;
}

.form .inline select {
  float: left;
}

/* Form Errors */
.field-with-errors {

}

/* Billing/Shipping Addresses */

#billing_address_phone {
  margin: 0 0 10px 0;
}

#billing-is-shipping td {
  border: solid 1px {{ settings.color_borders }};
  padding: 5px;
}

#addresses #shipping-same.address-notification {
  padding: 10px;
  text-align: left;
  border: none;
}

@media only screen and (max-width:1000px) {
  .form .inline label {
    width: 100px;
  }
}

/*================ #Step 2 - Paying for your order ================*/
.sst .gleft {
  width: 40%;
}

#credit-card-info {
  float: left;
  width: 60%;
  margin: 0;
}

#credit-card-info table {
  width: 100%;
}

#container #credit_card_verification_value {
  width: auto;
}

@media only screen and (max-width:646px) {
  .sst .gleft,
  #credit-card-info {
    width: 100%;
    float: none;
    padding: 0;
  }

  #payment-methods {
    margin-bottom: 5px;
  }
}

/*================ #Buttons ================*/
#buttons {
  clear: both;
  border: 0 none;
  word-spacing: 1em;
}

#buttons a {
  word-spacing: normal;
}

#cancel-purchase {
  font-size: 12px;
  display: inline-block;
  margin: 10px 0;
}

#buttons #complete-purchase {
  margin: 10px 0!important;
}

#buttons #commit-button,
#buttons #complete-purchase,
#create-account-btn,
input[type="submit"] {
  display: inline-block;
  padding: 8px 20px;
  margin: 0;
  line-height: 1.42;
  text-decoration: none;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  vertical-align: middle;
  white-space: nowrap;
  cursor: pointer;
  border: 1px solid transparent;
  -webkit-user-select: none;
  -moz-user-select:    none;
  -ms-user-select:     none;
  -o-user-select:      none;
  user-select:         none;
  -webkit-appearance:  none;
  border-radius: 2px;
  background-color: {{ settings.color_primary }};
  color: #fff;
}

#buttons #commit-button:hover,
#buttons #complete-purchase:hover {
  background-color: {{ settings.color_primary }};
  color: #fff;
  opacity: 0.8;
}

#buttons #commit-button:active,
#buttons #complete-purchase:active {
 opacity: 1;
}

/*================ Forms ================*/




#container label,
#container legend {
  display: inline-block;
  margin: 0;
  font-size: 14px;
}

#container input[type="checkbox"] + label,
#container input[type="radio"] + label {
  display: inline;
}