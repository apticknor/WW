/* ---------------------------------------------------------------------
 Variables - Colors
------------------------------------------------------------------------ */
$WHITE: #ffffff;
$BLACK: #000000;
$ACCENT_1: {{ settings.accent_color_1 }};
$ACCENT_2: {{ settings.accent_color_2 }};
$TEXT_COLOR: {{ settings.text_color }};
$LINK_COLOR: {{ settings.link_color }};

/* ---------------------------------------------------------------------
 Variables - Font Size
------------------------------------------------------------------------ */
$FONT_SIZE_XS: {{ settings.font_size_xs }};
$FONT_SIZE_SM: {{ settings.font_size_sm }};
$FONT_SIZE_MD: {{ settings.font_size_md }};
$FONT_SIZE_LG: {{ settings.font_size_lg }};
$FONT_SIZE_XL: {{ settings.font_size_xl }};

/* ---------------------------------------------------------------------
 Variables - Font Family
------------------------------------------------------------------------ */
$SANS_SERIF: 'MisoRegular', Helvetica, Arial, sans-serif;
$SERIF: Baskerville, "Baskerville Old Face", "Hoefler Text", Georgia, Times, "Times New Roman", serif;

/* ---------------------------------------------------------------------
 Variables - Site
------------------------------------------------------------------------ */
$SITE_MAX_WIDTH: 1386px;
$SITE_STD_UNIT: 20px;

/* ---------------------------------------------------------------------
 Variables - Breakpoints
------------------------------------------------------------------------ */
$BREAKPOINT_XS: 30em; // 480px
$BREAKPOINT_SM: 37em; // 592px
$BREAKPOINT_XM: 44em; // 704px
$BREAKPOINT_MD: 50em; // 800px
$BREAKPOINT_MX: 56em; // 896px
$BREAKPOINT_LG: 60em; // 960px
$BREAKPOINT_XL: 65em; // 1040px
$BREAKPOINT_XXL: 75em; // 1200px
$BREAKPOINT_XXXL: 82em; // 1312px

/* ---------------------------------------------------------------------
 Mixin - Visually Hidden
------------------------------------------------------------------------ */
@mixin is-visually-hidden() {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}

/* ---------------------------------------------------------------------
 Mixin - Clearfix
------------------------------------------------------------------------ */
@mixin clearfix() {
    &:before,
    &:after {
        content: " ";
        display: table;
    }

    &:after {
        clear: both;
    }
}

/* ---------------------------------------------------------------------
 Mixin - Box Sizing
------------------------------------------------------------------------ */
@mixin box-sizing($BOX_MODEL) {
    -webkit-box-sizing: $BOX_MODEL;
       -moz-box-sizing: $BOX_MODEL;
            box-sizing: $BOX_MODEL;
}

/* ---------------------------------------------------------------------
 Mixin - Border Radius
------------------------------------------------------------------------ */
@mixin border-radius($RADIUS...) {
    -webkit-background-clip: padding-box;
       -moz-background-clip: padding-box;
         -o-background-clip: padding-box;
            background-clip: padding-box; // stops color from going past the edge of the rounded element
    -webkit-border-radius: $RADIUS;
       -moz-border-radius: $RADIUS;
            border-radius: $RADIUS;
}

/* ---------------------------------------------------------------------
 Reset - Eric Meyer
------------------------------------------------------------------------ */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-weight: inherit;
    font-style: inherit;
    font-family: inherit;
    vertical-align: baseline;
}

body {
    line-height: 1;
}

ol, ul {
    list-style: none;
}

blockquote, q {
    quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
    content: '';
    content: none;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}

/* ---------------------------------------------------------------------
 Reset - HTML5 Elements
------------------------------------------------------------------------ */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, main {
    display: block;
}

audio, canvas, video, progress, picture {
    display: inline-block;
}

template {
    display: none;
}

/* ---------------------------------------------------------------------
 Reset - Forms
------------------------------------------------------------------------ */
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
    -webkit-appearance: none;
}

input[type="search"] {
    -webkit-appearance: none;
    -webkit-box-sizing: content-box;
    -moz-box-sizing: content-box;
    box-sizing: content-box;
}

textarea {
    overflow: auto;
    vertical-align: top;
    resize: vertical;
}

::-moz-focus-inner,
button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner,
input[type="reset"]::-moz-focus-inner {
    padding: 0 !important;
    border: 0 none !important;
}

/* ---------------------------------------------------------------------
 Reset - Shopify
------------------------------------------------------------------------ */
#admin_bar_iframe {
    display: none !important; // hide the shopify admin bar always
}

/* ---------------------------------------------------------------------
 Base - Elements
------------------------------------------------------------------------ */
body {
    background-color: $ACCENT_1; // this is the color of the footer only
    color: $TEXT_COLOR;
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_LG;
    line-height: 1.4;
}

a {
    color: $LINK_COLOR;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

a:hover,
a:focus {
    color: $LINK_COLOR;
}

/* ---------------------------------------------------------------------
 Base - Responsive Media
------------------------------------------------------------------------ */
img, audio, canvas, video, picture {
    max-width: 100% !important; // media should never overflow it's container
}

/* ---------------------------------------------------------------------
 Utility - Content Hiding
------------------------------------------------------------------------ */
.isVisuallyHidden {
    @include is-visually-hidden();
}

/* ---------------------------------------------------------------------
 Landmark - Toolbar
------------------------------------------------------------------------ */
.toolbar {
    padding: 14px 0 12px 0;
    text-align: right;
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: $WHITE;
    @media (min-width: $BREAKPOINT_MD) {
        font-size: $FONT_SIZE_MD;
    }
}

.toolbar a {
    color: $WHITE;
    text-decoration: none;
}

.toolbar-hamburger {
    float: left;
    @media (min-width: $BREAKPOINT_XS) {
        display: none;
    }
}

.toolbar-promo {
    display: none;
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        padding-right: $SITE_STD_UNIT;
    }
}

.toolbar-util {
    display: inline-block;
}

.toolbar-util-list > li {
    display: inline-block;
}

.toolbar-util-list > li + li {
    padding-left: $SITE_STD_UNIT;
}

.toolbar-util-list > li.toolbar-util-list-account {
    display: none;
    @media (min-width: $BREAKPOINT_XS) {
        display: inline-block;
    }
}

/* ---------------------------------------------------------------------
 Landmark - Masthead
------------------------------------------------------------------------ */
.masthead {
    @include clearfix();
    padding: $SITE_STD_UNIT 0;
    @media(min-width: $BREAKPOINT_XM) {
        border-bottom: 1px solid $TEXT_COLOR;
        margin-bottom: $SITE_STD_UNIT*2;
    }
}

.masthead-brand {
    @media (min-width: $BREAKPOINT_XS) {
        float: left;
        width: calc(40% - #{$SITE_STD_UNIT});
        padding-right: $SITE_STD_UNIT;
    }
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
    }
}

.masthead-nav {
    display: none;
    @media (min-width: $BREAKPOINT_XS) {
        display: block;
        float: left;
        width: 60%;
    }
    @media (min-width: $BREAKPOINT_XM) {
        float: none;
        width: 100%;
    }
}

/* ---------------------------------------------------------------------
 Masthead Module - Logo
------------------------------------------------------------------------ */
.logo {
    width: 120px; // width set for inline svg
    margin: 0 auto; // center on small screens
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
        margin: 0;
    }

}

/* ---------------------------------------------------------------------
 Masthead Module - Nav
------------------------------------------------------------------------ */
.nav-list {
    margin-top: $SITE_STD_UNIT*0.5;
    font-size: 0;
    @media(min-width: $BREAKPOINT_XM) {
        text-align: right;
    }
}

.nav-list > * {
    display: inline-block;
    @include box-sizing(border-box);
    width: 50%;
    padding-left: $SITE_STD_UNIT;
    @media(min-width: $BREAKPOINT_XM) {
        width: auto;
    }
    @media(min-width: $BREAKPOINT_MD) {
        padding-left: $SITE_STD_UNIT*1.5;
    }
}

.nav-list a {
    font-size: $FONT_SIZE_XL;
    text-transform: uppercase;
    @media (min-width: $BREAKPOINT_MD) {
        font-size: $FONT_SIZE_LG;
    }
}

/* ---------------------------------------------------------------------
 Masthead Module - MobileNav
------------------------------------------------------------------------ */
.mobileNav {
    height: 0;
    overflow: hidden;
    background-color: darken($ACCENT_2, 5%);
    color: $WHITE;
    @media(min-width: $BREAKPOINT_XS) {
        height: 0 !important;
    }
}

.mobileNav-isVisible {
    height: auto;
}

.mobileNav-list > li a {
    display: block;
    padding: #{$SITE_STD_UNIT*0.35} $SITE_STD_UNIT;
    border-top: 1px solid $ACCENT_2;
    color: $WHITE;
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
}

.mobileNav-list > li a:hover,
.mobileNav-list > li a:focus {
    background-color: darken($ACCENT_2, 8%);
}

/* ---------------------------------------------------------------------
 Landmark - Footer
------------------------------------------------------------------------ */
.footer {
    padding: $SITE_STD_UNIT*1.5 0;
    color: $WHITE;
    font-family: $SERIF;
    font-size: $FONT_SIZE_LG;
    @media (min-width: $BREAKPOINT_MD) {
        padding-top: $SITE_STD_UNIT*2;
        padding-bottom: $SITE_STD_UNIT*2;
    }
}

.footer a {
    color: $WHITE;
}

/* ---------------------------------------------------------------------
 Footer Module - footerGrid
------------------------------------------------------------------------ */
$footer-BORDER: 1px solid $WHITE;

.footerGrid {
    @include clearfix();
}

.footerGrid-col_cta {
    padding-bottom: $SITE_STD_UNIT*1.75; // slight larger than the rest because there isn't line-height causing extra space here.
    margin-bottom: $SITE_STD_UNIT*1.5;
    border-bottom: $footer-BORDER;
    @media (min-width: $BREAKPOINT_MD) {
        padding-bottom: 0;
        margin-bottom: 0;
        border-bottom: none;
        float: left;
        width: calc(100% - 420px); // 420 - 240 + 180 (column sizes)
        position: relative;
        left: 240px; // move into 2nd position
    }
    @media (min-width: $BREAKPOINT_XL) {
        padding-top: 14px; // faux vertical alignment. YAY
    }
}

.footerGrid-col_info {
    padding-bottom: $SITE_STD_UNIT*1.5; // slight larger than the rest because there isn't line-height causing extra space here.
    margin-bottom: $SITE_STD_UNIT*1.5;
    border-bottom: $footer-BORDER;
    text-align: center;
    @media (min-width: $BREAKPOINT_SM) {
        font-size: 0; // remove space between inline-block elements
    }
    @media (min-width: $BREAKPOINT_MD) {
        padding-bottom: 0;
        margin-bottom: 0;
        border-bottom: none;
        float: left;
        width: 240px;
        position: relative;
        left: calc(-100% + 420px); // move into 1st col position
    }
    @media (min-width: $BREAKPOINT_XL) {
        text-align: left;
    }
}

.footerGrid-col_info-address {
    margin-bottom: $SITE_STD_UNIT;
    @media (min-width: $BREAKPOINT_SM) {
        margin-bottom: 0;
        display: inline-block;
        width: 50%;
        vertical-align: middle;
        font-size: $FONT_SIZE_LG; // return font-size
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: block;
        margin-bottom: $SITE_STD_UNIT;
        width: auto;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_info-hours {
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        width: 50%;
        vertical-align: middle;
        font-size: $FONT_SIZE_LG; // return font-size
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: block;
        width: auto;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_nav {
    text-align: center;
    @media (min-width: $BREAKPOINT_MD) {
        float: left;
        width: 180px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        text-align: left;
        width: 160px;
        padding-left: 20px
    }
}

.footerGrid-col_nav-list > li {
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        font-size: $FONT_SIZE_MD;
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: list-item;
    }
    @media (min-width: $BREAKPOINT_XL) {
        font-size: $FONT_SIZE_LG;
    }
}

.footerGrid-col_nav-list > li + li:before {
    @media (min-width: $BREAKPOINT_SM) {
        content: "\00a0\00a0\007C\00a0\00a0\00a0";
    }
    @media (min-width: $BREAKPOINT_MD) {
        content: "";
    }
}

/* ---------------------------------------------------------------------
 Footer Grid Outer Module - footerGridOuter
------------------------------------------------------------------------ */
.footerGridOuter {
    @media (min-width: $BREAKPOINT_MD) {
        position: relative;
        margin-left: -20px; // undo wrapper padding
        margin-right: -20px; // undo wrapper padding
    }
    @media (min-width: $BREAKPOINT_MX) {
        margin-left: 0;
        margin-right: 0;
    }
}

.footerGridOuter:before {
    // horizontal divider
    @media (min-width: $BREAKPOINT_MD) {
        content: " ";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 240px;
        width: 1px;
        background-color: $WHITE;
    }
    @media (min-width: $BREAKPOINT_MX) {
        left: 260px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        left: 240px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        left: 260px;
    }
    @media (min-width: $BREAKPOINT_XXL) {
        left: 280px;
    }
    @media (min-width: $BREAKPOINT_XXXL) {
        left: 300px;
    }
}

.footerGridOuter:after {
    // horizontal divider
    @media (min-width: $BREAKPOINT_MD) {
        content: " ";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        right: 180px;
        width: 1px;
        background-color: $WHITE;
    }
    @media (min-width: $BREAKPOINT_MX) {
        right: 200px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        right: 180px;
    }
    @media (min-width: $BREAKPOINT_XL) {
        right: 200px;
    }
    @media (min-width: $BREAKPOINT_XXL) {
        right: 220px;
    }
    @media (min-width: $BREAKPOINT_XXXL) {
        right: 240px;
    }
}

/* ---------------------------------------------------------------------
 Footer Module - signupForm
------------------------------------------------------------------------ */
.signupForm {
    position: relative;
    max-width: 320px;
    margin: 0 auto;
    @media (min-width: $BREAKPOINT_SM) {
        max-width: 420px;
    }
    @media (min-width: $BREAKPOINT_MD) {
        max-width: 280px;
    }
    @media (min-width: $BREAKPOINT_LG) {
        max-width: 380px;
    }
}

.signupForm-btn {
    position: absolute;
    top: 0;
    right: 0;
}

/* ---------------------------------------------------------------------
 Footer Module - newsletterLabel
------------------------------------------------------------------------ */
.newsletterLabel {
    display: none;
    @media (min-width: $BREAKPOINT_SM) {
        display: inline;
    }
    @media (min-width: $BREAKPOINT_MD) {
        display: none;
    }
    @media (min-width: $BREAKPOINT_LG) {
        display: inline;
    }
}

/* ---------------------------------------------------------------------
 Module - Tier
------------------------------------------------------------------------ */
.tier {
    @include clearfix(); // always clear a tier in case other generated content has floats
    background-color: $WHITE;
}

.tier_accent1 {
    background-color: $ACCENT_1;
}

.tier_accent2 {
    background-color: $ACCENT_2;
}

.tier_transparent {
    background-color: transparent;
}

/* ---------------------------------------------------------------------
 Module - Wrapper
------------------------------------------------------------------------ */
.wrapper {
    max-width: $SITE_MAX_WIDTH;
    margin: 0 auto;
    padding: 0 $SITE_STD_UNIT;
    @media (min-width: $BREAKPOINT_XL) {
        padding: 0 $SITE_STD_UNIT*2;
    }
}

.wrapper_constrained {
    max-width: 400px;
    @media (min-width: $BREAKPOINT_SM) {
        max-width: 500px;
    }
    @media (min-width: $BREAKPOINT_MD) {
        max-width: $SITE_MAX_WIDTH;
    }
}

/* ---------------------------------------------------------------------
 Module - Field
------------------------------------------------------------------------ */
$field-btn-PADDING_TIGHT: 7px 10px;
$field-btn-PADDING_LOOSE: 14px 20px;
$field-btn-FONT_SIZE_SM: $FONT_SIZE_MD;
$field-btn-FONT_SIZE_LG: $FONT_SIZE_LG;

.field {
    margin: 0;
    padding: 0;
    border: 0;
    @include box-sizing(border-box);
    font-family: $SERIF;
    line-height: normal;
}

.field_txt {
    width: 100%;
    padding: $field-btn-PADDING_TIGHT;
    border: none;
    background-color: $WHITE;
    font-size: $field-btn-FONT_SIZE_SM;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    @include border-radius(0);
}

.field_txt_overlap {
    padding-right: 74px;
}

/* ---------------------------------------------------------------------
 Module - Button
------------------------------------------------------------------------ */
.btn {
    margin: 0;
    padding: $field-btn-PADDING_TIGHT;
    border: none;
    background-color: $ACCENT_2;
    color: $WHITE;
    font-size: $field-btn-FONT_SIZE_SM;
    font-family: $SERIF;
    line-height: normal;
    cursor: pointer;
}

.btn_transparent {
    background-color: transparent;
    border-left: 1px solid $ACCENT_1;
    color: $ACCENT_1;
}

/* ---------------------------------------------------------------------
 Module - Section
------------------------------------------------------------------------ */
.section {
    text-align: center;
}

.section-hd {
    margin-bottom: $SITE_STD_UNIT;
}

.section-bd {
    margin-bottom: $SITE_STD_UNIT;
}

.section-ft {
    font-size: $FONT_SIZE_MD;
    @media (min-width: $BREAKPOINT_LG) {
        font-size: $FONT_SIZE_LG;
    }
}
