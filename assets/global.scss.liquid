@font-face {
    font-family: 'MisoLight';
    src: url('miso-light-webfont.eot');
    src: url('miso-light-webfont.eot?#iefix') format('embedded-opentype'),
         url('miso-light-webfont.woff') format('woff'),
         url('miso-light-webfont.ttf') format('truetype'),
         url('miso-light-webfont.svg#misolight') format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'MisoRegular';
    src: url('miso-regular-webfont.eot');
    src: url('miso-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('miso-regular-webfont.woff') format('woff'),
         url('miso-regular-webfont.ttf') format('truetype'),
         url('miso-regular-webfont.svg#misoregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

/* ---------------------------------------------------------------------
 Variables - Colors
------------------------------------------------------------------------ */
$WHITE: #ffffff;
$BLACK: #000000;
$ACCENT_1: {{ settings.accent_color_1 }};
$ACCENT_2: {{ settings.accent_color_2 }};
$TEXT_COLOR: {{ settings.text_color }};
$LINK_COLOR: {{ settings.link_color }};

/* ---------------------------------------------------------------------
 Variables - Font Size
------------------------------------------------------------------------ */
$FONT_SIZE_XS: {{ settings.font_size_xs }};
$FONT_SIZE_SM: {{ settings.font_size_sm }};
$FONT_SIZE_MD: {{ settings.font_size_md }};
$FONT_SIZE_LG: {{ settings.font_size_lg }};
$FONT_SIZE_XL: {{ settings.font_size_xl }};

/* ---------------------------------------------------------------------
 Variables - Font Family
------------------------------------------------------------------------ */
$SANS_SERIF: 'MisoRegular', Helvetica, Arial, sans-serif;
$SERIF: Baskerville, "Baskerville Old Face", "Hoefler Text", Georgia, Times, "Times New Roman", serif;

/* ---------------------------------------------------------------------
 Variables - Site
------------------------------------------------------------------------ */
$SITE_MAX_WIDTH: 1386px;
$SITE_STD_UNIT: 20px;

/* ---------------------------------------------------------------------
 Variables - Breakpoints
------------------------------------------------------------------------ */
$BREAKPOINT_XS: 30em; // 480px
$BREAKPOINT_SM: 37em; // 592px
$BREAKPOINT_XM: 42em; // 640px
$BREAKPOINT_MD: 48em; // 768px
$BREAKPOINT_LG: 60em; // 960px
$BREAKPOINT_XL: 75em; // 1200px

/* ---------------------------------------------------------------------
 Mixin - Visually Hidden
------------------------------------------------------------------------ */
@mixin is-visually-hidden() {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}

/* ---------------------------------------------------------------------
 Mixin - Clearfix
------------------------------------------------------------------------ */
@mixin clearfix() {
    &:before,
    &:after {
        content: " ";
        display: table;
    }

    &:after {
        clear: both;
    }
}

/* ---------------------------------------------------------------------
 Mixin - Box Sizing
------------------------------------------------------------------------ */
@mixin box-sizing($box-model) {
    -webkit-box-sizing: $box-model;
    -moz-box-sizing: $box-model;
    -ms-box-sizing: $box-model;
    -o-box-sizing: $box-model;
    box-sizing: $box-model;
}

/* ---------------------------------------------------------------------
 Reset - Eric Meyer
------------------------------------------------------------------------ */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-weight: inherit;
    font-style: inherit;
    font-family: inherit;
    vertical-align: baseline;
}

body {
    line-height: 1;
}

ol, ul {
    list-style: none;
}

blockquote, q {
    quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
    content: '';
    content: none;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

html {
    overflow-y: scroll; // Always show a vertical scrollbar, even when there is no scrolling
}

html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}

/* ---------------------------------------------------------------------
 Reset - HTML5 Elements
------------------------------------------------------------------------ */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, main {
    display: block;
}

audio, canvas, video, progress, picture {
    display: inline-block;
}

template {
    display: none;
}

/* ---------------------------------------------------------------------
 Reset - Forms
------------------------------------------------------------------------ */
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
    -webkit-appearance: none;
}

input[type="search"] {
    -webkit-appearance: none;
    -webkit-box-sizing: content-box;
    -moz-box-sizing: content-box;
    box-sizing: content-box;
}

textarea {
    overflow: auto;
    vertical-align: top;
    resize: vertical;
}

::-moz-focus-inner,
button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner,
input[type="reset"]::-moz-focus-inner {
    padding: 0 !important;
    border: 0 none !important;
}

/* ---------------------------------------------------------------------
 Reset - Shopify
------------------------------------------------------------------------ */
#admin_bar_iframe {
    display: none !important; // hide the shopify admin bar always
}

/* ---------------------------------------------------------------------
 Base - Elements
------------------------------------------------------------------------ */
body {
    background-color: $ACCENT_1; // this is the color of the footer only
    color: $TEXT_COLOR;
    font-family: $SANS_SERIF;
    font-size: $FONT_SIZE_LG;
    line-height: 1.4;
}

a {
    color: $LINK_COLOR;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

a:hover,
a:focus {
    color: $LINK_COLOR;
}

/* ---------------------------------------------------------------------
 Base - Responsive Media
------------------------------------------------------------------------ */
img, audio, canvas, video, picture {
    max-width: 100% !important; // media should never overflow it's container
}

/* ---------------------------------------------------------------------
 Utility - Content Hiding
------------------------------------------------------------------------ */
.isVisuallyHidden {
    @include is-visually-hidden();
}

/* ---------------------------------------------------------------------
 Landmark - Toolbar
------------------------------------------------------------------------ */
.toolbar {
    padding: 14px 0 12px 0;
    text-align: right;
    font-size: $FONT_SIZE_MD;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: $WHITE;
}

.toolbar a {
    color: $WHITE;
    text-decoration: none;
}

.toolbar-hamburger {
    float: left;
    @media (min-width: $BREAKPOINT_XS) {
        display: none;
    }
}

.toolbar-promo {
    display: none;
    @media (min-width: $BREAKPOINT_SM) {
        display: inline-block;
        padding-right: $SITE_STD_UNIT;
    }
}

.toolbar-util {
    display: inline-block;
}

/* ---------------------------------------------------------------------
 Landmark - Masthead
------------------------------------------------------------------------ */
.masthead {
    @include clearfix();
    padding: $SITE_STD_UNIT 0;
    @media(min-width: $BREAKPOINT_XM) {
        border-bottom: 1px solid $TEXT_COLOR;
        margin-bottom: $SITE_STD_UNIT*2;
    }
}

.masthead-brand {
    @media (min-width: $BREAKPOINT_XS) {
        float: left;
        width: calc(40% - #{$SITE_STD_UNIT});
        padding-right: $SITE_STD_UNIT;
    }
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
    }
}

.masthead-nav {
    display: none;
    @media (min-width: $BREAKPOINT_XS) {
        display: block;
        float: left;
        width: 60%;
    }
    @media (min-width: $BREAKPOINT_XM) {
        float: none;
        width: 100%;
    }
}

/* ---------------------------------------------------------------------
 Masthead Module - Logo
------------------------------------------------------------------------ */
.logo {
    width: 120px; // width set for inline svg
    margin: 0 auto; // center on small screens
    @media (min-width: $BREAKPOINT_XM) {
        width: 140px;
        margin: 0;
    }

}

/* ---------------------------------------------------------------------
 Masthead Module - Nav
------------------------------------------------------------------------ */
.nav-list {
    margin-top: $SITE_STD_UNIT;
    font-size: 0;
    @media(min-width: $BREAKPOINT_XM) {
        text-align: right;
    }
}

.nav-list > * {
    display: inline-block;
    @include box-sizing(border-box);
    width: 50%;
    padding-left: $SITE_STD_UNIT;
    @media(min-width: $BREAKPOINT_XM) {
        width: auto;
    }
    @media(min-width: $BREAKPOINT_MD) {
        padding-left: $SITE_STD_UNIT*1.5;
    }
}

.nav-list a {
    font-size: $FONT_SIZE_LG;
    text-transform: uppercase;
}

/* ---------------------------------------------------------------------
 Landmark - Footer
------------------------------------------------------------------------ */
.footer {
    padding: $SITE_STD_UNIT 0;
    color: $WHITE;
    font-family: $SERIF;
    @media (min-width: $BREAKPOINT_MD) {
        padding-top: $SITE_STD_UNIT * 2;
        padding-bottom: $SITE_STD_UNIT * 2;
    }
    @media (min-width: $BREAKPOINT_LG) {
        padding-top: $SITE_STD_UNIT * 4;
        padding-bottom: $SITE_STD_UNIT * 4;
    }
}

.footer a {
    color: $WHITE;
}

/* ---------------------------------------------------------------------
 Footer Module - footerGrid
------------------------------------------------------------------------ */
.footerGrid {
    display: table;
    width: 100%;
}

.footerGrid-col {
    display: table-cell;
    width: 50%;
    text-align: center;
    vertical-align: middle;
}

.footerGrid-col:first-child {
    width: 25%;
    padding-right: $SITE_STD_UNIT*2;
    border-right: 1px solid $WHITE;
    text-align: left;

}

.footerGrid-col:last-child {
    width: 25%;
    padding-left: $SITE_STD_UNIT*2;
    border-left: 1px solid $WHITE;
    text-align: left;
}


/* ---------------------------------------------------------------------
 Module - Tier
------------------------------------------------------------------------ */
.tier {
    @include clearfix(); // always clear a tier in case other generated content has floats
    background-color: $WHITE;
}

.tier_accent1 {
    background-color: $ACCENT_1;
}

.tier_accent2 {
    background-color: $ACCENT_2;
}

.tier_transparent {
    background-color: transparent;
}

/* ---------------------------------------------------------------------
 Module - Wrapper
------------------------------------------------------------------------ */
.wrapper {
    max-width: $SITE_MAX_WIDTH;
    margin: 0 auto;
    padding: 0 $SITE_STD_UNIT;
}









