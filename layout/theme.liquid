<!doctype html>
<html class="no-js" lang="en-us">
<head>
    <!-- META -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <title>
        {{ page_title }}
        {% if current_tags %} | tagged "{{ current_tags | join: ', ' }}"{% endif %}
        {% if current_page != 1 %} | Page {{ current_page }}{% endif %}
        {% unless page_title contains shop.name %} | {{ shop.name }}{% endunless %}
    </title>

    {% if page_description %}
        <meta name="description" content="{{ page_description | escape }}" />
    {% endif %}

    <link rel="canonical" href="{{ canonical_url }}" />

    <!-- Social Media -->
    {% include 'open-graph-tags' %}
    {% include 'twitter-card' %}

    <!-- Shopify content_for_header -->
    {{ content_for_header }}

    <!-- Styles -->
    {{ 'global.scss.css' | asset_url | stylesheet_tag }}

    <!-- Scripts -->
    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' | script_tag }}
    {{ 'global.js' | asset_url | script_tag }}
    {{ "shopify_common.js" | shopify_asset_url | script_tag }}

    <script type="text/javascript">
        var MTUserId='c8670f9b-dfab-4cf5-a732-46e6091fd552';
        var MTFontIds = new Array();

        MTFontIds.push("710697"); // Sackersâ„¢ Gothic W01 Light
        (function() {
            var mtTracking = document.createElement('script');
            mtTracking.type='text/javascript';
            mtTracking.async='true';
            mtTracking.src=('https:'==document.location.protocol?'https:':'http:')+'//fast.fonts.net/lt/trackingCode.js';

            (document.getElementsByTagName('head')[0]||document.getElementsByTagName('body')[0]).appendChild(mtTracking);
        })();
    </script>

</head>
<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" itemscope itemtype="http://schema.org/LocalBusiness">

    {% include 'global-toolbar' %}
    {% include 'global-masthead' %}

    <div class="tier">
        <div class="wrapper">
            <div role="main">
                {{ content_for_layout }}
            </div>
        </div>
    </div>

    {% include 'global-footer' %}

</body>
</html>