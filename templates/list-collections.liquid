<div class="pageWrapper">
    {% paginate collections by 12 %}
        <div class="pageWrapper-section pageWrapper-section_isCentered">
            <h1 class="sectionTitle">Collections</h1>
        </div>
        <div class="pageWrapper-section">

            <ul class="blocks blocks_std">
                {% for collection in collections %}
                <li>
                    <div class="panel">
                        <div class="panel-media">
                            <a href="{{ collection.url }}">
                            {% if collection.image %}
                                <img src="{{ collection.image.src | collection_img_url: 'large' }}" alt="{{ collection.image.alt | escape }}" />
                            {% else %}
                                <img src="{{ collection.products.first.featured_image.src | product_img_url: 'large' }}" alt="{{ collection.title | escape }}" />
                            {% endif %}
                            </a>
                        </div>
                        <div class="panel-hd">
                            <h2 class="hdg hdg_lg">
                                <a href="{{ collection.url }}">
                                    {{ collection.title }}
                                </a>
                            </h2>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% if paginate.pages > 1 %}
        <div class="pageWrapper-section pageWrapper-section_isTight">
            {% include 'global-pagination' %}
        </div>
        {% endif %}
    {% endpaginate %}
</div>
